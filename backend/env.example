# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (comma-separated list of allowed origins)
# Example: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000
# If not set, defaults to development origins or production default
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Self-Ping Configuration (keeps server alive - prevents Render from sleeping)
SELF_PING_INTERVAL_MS=30000  # Ping every 30 seconds (30000ms)
PUBLIC_URL=https://your-service.onrender.com  # Your public URL for production self-ping (optional, will auto-detect on Render)

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/career_compass
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/career_compass

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Password Encryption
BCRYPT_ROUNDS=12

# MSG91 SMS/OTP Configuration (for production)
MSG91_AUTH_KEY=your-msg91-auth-key-here
MSG91_TEMPLATE_ID=your-msg91-template-id-here

# Razorpay Payment Gateway (for test mode use: rzp_test_xxxxx)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_from_razorpay

# Twilio SMS Configuration (fallback, optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12

